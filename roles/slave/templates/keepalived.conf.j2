# Configuration Keepalived
vrrp_script reload_haproxy {
    script "killall -0 haproxy"   # verify the pid existance
    interval 1                    # check every 2 seconds
}

vrrp_instance VI_1 {
    virtual_router_id 51          # Assign one ID for this route
    state MASTER
    priority 100                  # 100 on master, 100 on backup
    #Interval de check
    advert_int 1
    # Interface de synchro entre les LB
    lvs_sync_daemon_interface eth0
    interface eth0                # interface to monitor
    # Authentication 
    authentication {
        auth_type PASS
        auth_pass PA$$WO10
    }
    virtual_ipaddress {
        192.168.9.100/32 brd 192.168.9.255 scope global              # the virtual IP
    }
    track_script {
        reload_haproxy
    }
}
